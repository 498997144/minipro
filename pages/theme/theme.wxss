.products-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 20rpx;
}
.products-list .products-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
  width: 350rpx;
  height: 320rpx;
  background-color: #eeeeee;
}
.products-list .products-item image {
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}
.products-list .products-item .desc {
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.products-list .products-item .desc text {
  display: flex;
  justify-content: center;
  align-items: center;
}
.products-list .products-item .desc .price {
  color: red;
}
.container .header {
  margin-bottom: 40rpx;
}
.container .header image {
  width: 750rpx;
  height: 400rpx;
}
